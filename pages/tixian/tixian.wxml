<!--pages/tixian/tixian.wxml-->
<!-- 提现 -->
<view class="setting_page">
	<view class="page__bd">

	    <view class="weui-cells weui-cells_after-title">
	        <view class='user_info_box'>
            <view class='shenfen'  data-url='../goodsdetaile/goodsdetaile?id=16' bindtap='goto'  wx:if="{{user_status == 0 }}">
              <view>我的等级</view>
              <view class='text'><i class="iconfont icon-crownfill"></i> 普通会员</view>
              <view class='shengji'>身份升级</view>
            </view>
	        	<view class='shenfen'  data-url='../goodsdetaile/goodsdetaile?id=16' bindtap='goto'  wx:if="{{user_status == 1 }}">
              <view>我的等级</view>
              <view class='text'><i class="iconfont icon-crownfill"></i> 消费商</view>
              <view class='shengji'>身份升级</view>
            </view>
            <view class='shenfen' wx:if="{{user_status == 2 }}">
              <view>我的等级</view>
              <view class='text'><i class="iconfont icon-crownfill"></i> 合伙人</view>
              <!-- <view>合伙人</view> -->
              <view class='shengji'>最高身份</view>
            </view>

            <view class='r_tixian'  data-url='../tixian/tixian' bindtap='goto'>
              <!-- <view><i class="iconfont icon-leijishouru"></i> 快速提现</view> -->
            
              <view>可提现(元)</view>
              <view><i class="iconfont icon-leijishouru"></i>　{{user_data.meney}}</view>
              <view class='shengji'>快速提现</view>
            </view>
	        	
            <view class="userinfo-avatar">
              <open-data  type="userAvatarUrl"></open-data>
            </view>

            <view class='user_info_nickname'>
              <open-data type="userNickName"></open-data>
              <!-- <view style="font-size:12px;">我的推荐人:username</view> -->
            </view>
                
            <view class='centen_jifen'>
              <view class='centen_jifen_content'>
                <text>销售奖励</text>
                <text>{{user_data.meney}}元</text>
              </view>
              <view class='centen_jifen_content centen_jifen_content2'>
                <text>累计提现</text>
                <text>{{user_data.cumulative}}元</text>
              </view>
              <view class='centen_jifen_content centen_jifen_content2'>
                <text>分红奖励</text>
                <text>{{user_data.shareProfit}}元</text> 
              </view>
              <view class='centen_jifen_content'>
                <text>待释放</text>
                <text>{{user_data.partner}}元</text>
              </view>              
            </view>
            
	        </view>            
        <view class="weui-cells__title">选择奖励</view>
        <view class="weui-cells weui-cells_after-title">
            <radio-group bindchange="radioChange">
                <label class="weui-cell weui-check__label" wx:for="{{radioItems}}" wx:key="value">
                    <radio class="weui-check" value="{{item.value}}" checked="{{item.checked}}"/>

                    <view class="weui-cell__bd">{{item.name}}</view>
                    <view class="weui-cell__ft weui-cell__ft_in-radio" wx:if="{{item.checked}}">
                        <icon class="weui-icon-radio" type="success_no_circle" size="16"></icon>
                    </view>
                </label>
            </radio-group>
        </view>
        <view class='khr'></view>

            <view class="weui-cells__title">
             <view style='float:left;'> 选择到账的银行卡,如没银行卡请先</view>
             <view style='float:left;color:#FB3956;' data-url='../bank/bank' bindtap='goto' >添加</view>
             <view style="clear:both;"></view>
            </view>
            <view class="weui-cells weui-cells_after-title">
                <view class="weui-cell weui-cell_select">
                    <view class="weui-cell__bd">
                        <picker bindchange="bindAccountChange" value="{{accountIndex}}" range="{{accounts}}">
                            <view class="weui-select">{{accounts[accountIndex]}}</view>
                        </picker>
                    </view>
                </view>                
            </view>

            <view class='khr'></view>
            <view class="weui-cells__title" wx:if="{{bindphone !=0}}">请留意{{bindphone}}手机信息</view>
            <view class="weui-cells__title" wx:else>请先绑定手机</view>
            <view class="weui-cell weui-cell_input weui-cell_vcode">
                <view class="weui-cell__hd">
                    <view class="weui-label">验证码</view>
                </view>
                <view class="weui-cell__bd">
                    <input class="weui-input" placeholder="请输入验证码" bindinput='bindcode'/>
                </view>
                <view class="weui-cell__ft">
                    <view class="weui-vcode-btn" wx:if="{{!code_time_show}}" bindtap='getcode'>获取验证码</view>
                    <view class="weui-vcode-btn" wx:if="{{code_time_show}}" style='color:#ccc;'>已发送{{code_time}}</view>
                </view>
            </view>

            <view class='khr'></view>

            <view class="weui-cells__title">提现金额：</view>
            <view class="weui-cell weui-cell_input">
              <view class="weui-cell__bd">
                  <input class="weui-input" placeholder="￥0.00" bindinput='getmoney'/>
              </view>              
            </view>  
            <view class="weui-cells__tips" wx:if="{{jiangli == 1}}">可提现金额为 {{tixianjine1}}元</view>
            <view class="weui-cells__tips" wx:if="{{jiangli == 2}}">可提现金额为 {{tixianjine2}}元</view>






          <view class='btn_box' style='margin-top:24px;padding-bottom:24px;'>
          <button class="weui-btn" type="warn" bindtap='openConfirm'>提现</button>
          </view>
          









	    </view>
	</view> <!-- page__bd -->
</view>

