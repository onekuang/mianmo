/* 菜单 */
.menu_box{
  display: flex;
  padding-bottom: 12px;
  padding-top: 12px;
}
.menu_box .item{
  flex: 1;
  max-width: 25%;
  text-align: center;
  font-size: 14px;
  overflow: hidden;
}
.menu_box .item .fang{
  margin: 0 auto;
  height: 50px;
  width: 50px;
  border-radius: 50%;
  color: #FA4660;
  font-size: 14px;
  line-height: 50px;
  margin-bottom: 8px;
  border: 1px solid #FA4660;
}
