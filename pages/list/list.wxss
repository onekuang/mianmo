
page,.main{
    height: 100%;
}
.categroy-left{
    float: left;
    width: 150rpx;
    height: 100%;
    border-right: 1px solid #f5f5f5;
    box-sizing: border-box;
}
.categroy-left .cate-list{
    /*min-height: 90rpx;*/
    /*line-height: 90rpx;*/
    padding: 16px 0;
    text-align: center;
    border-left: 3px solid #fff;
    font-size: 28rpx;
}
.categroy-left .cate-list.on{
    /* color: #50B3E4;
    border-color: #50B3E4; */
    color: #AB956D;
    border-color: #AB956D;
    border-bottom: 1px solid #eee;
}
.categroy-right{
    float: right;
    width: 600rpx;
    height: 100%;
    overflow: hidden;
    
}
.cate-box{
    height: 100%;
    padding:20rpx;
    box-sizing: border-box;
}
.cate-box .cate-banner image{
    display: block;
    width: 100%;
    height: 190rpx;
}
.cate-title{
    position: relative;
    height: 30rpx;
    line-height: 30rpx;
    padding:30rpx 0 12rpx;
    margin-bottom: 16px;
    text-align: center;
    color: #AB956D;
    /* color: #50B3E4; */
    font-size: 28rpx;
    border-bottom: 1px solid #AB956D;
}
