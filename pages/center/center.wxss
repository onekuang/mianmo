.qiandao_wrapper .qiandao_dangban {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 19;
  background: rgba(0, 0, 0, 0.3)
}
.qiandaobox {
  z-index: 20;
  box-shadow: 2px 2px 4px rgba(0, 0, 0, 0.05);
  border-radius: 8px;
  width: 90%;
  height: 900rpx;
  background: #fff;
  text-align: center;
  position: absolute;
  top: 10%;
  left: 50%;
  transform: translateX(-50%);
}
.img_box{
  position: relative;
}
.img_box .lxday{
  position: absolute;
  top: 130rpx;
  left: 50%;
  transform: translateX(-50%);
  color: #fff;
  font-size: 50rpx;
  text-align: center;
}
.img_box .lxday .lxday_text{
  font-weight: 900;
  font-size: 100rpx;
  
}
.qiandaobox image{
  width: 100%;
  height: 440rpx;
}
.qiandaoyouli{
  color: #FA4660;
  font-weight: 600;
  font-size: 40rpx;
  letter-spacing: 1px;
  margin-bottom: 32rpx
}
.lxqd{
  margin-top: 30rpx;
}
.lxqd .p1,.lxqd .p2 {
  font-size: 40rpx;
  color: #FA4660;
  font-weight: 700;
}
.k_btn{
  margin-top: 100rpx;
  display: inline-block;
  height: 50rpx;
  line-height: 50rpx;
  width: 90%;
  background: #FA4660;
  text-align: center;
  color: #fff;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  border-radius: 40rpx;
}
.k_btn_off{
  background: #c0c0c0;
}

